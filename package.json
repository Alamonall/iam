{
  "name": "iam-service",
  "version": "1.53.0",
  "description": "IAM Service",
  "scripts": {
    "prebuild": "rimraf dist",
    "copy-static": "copyfiles --all \"./**/*.crt\" ./dist",
    "build": "nest build && npm run copy-static",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "docker compose up -d --wait && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/index",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "npm run lint && jest && bash -c tsc -p tsconfig.json",
    "before-test": "sh scripts/generateTestCerts.sh",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:rib": "jest --runInBand",
    "test:e2e": "npm run before-test && docker compose -f docker-compose.e2e.yml up -d --wait && jest --config ./test/jest-e2e.json --forceExit && docker compose down && rm -rm ./test/etcd_certs",
    "openapi:generate": "npx ts-node -e \"require('./scripts/generateOpenAPIScheme.ts').generate('./scheme.json')\" && widdershins --search false --language_tabs false --summary scheme.json -o api.md"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Alamonall/iam"
  },
  "dependencies": {
    "@keycloak/keycloak-admin-client": "^18.0.2",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/microservices": "^9.1.2",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^6.1.2",
    "@nestjs/testing": "^9.0.11",
    "@nestjs/throttler": "^3.1.0",
    "@willsoto/nestjs-prometheus": "^4.7.0",
    "axios": "^1.1.2",
    "bullmq": "^2.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "env-var": "^7.2.0",
    "etcd3": "^1.1.0",
    "express": "^4.18.1",
    "hcaptcha": "^0.1.1",
    "ioredis": "^5.2.3",
    "jsonwebtoken": "^8.5.1",
    "kafkajs": "^2.2.0",
    "nestjs-pino": "^3.1.1",
    "node-rsa": "^1.1.1",
    "pino-http": "^8.2.0",
    "pino-pretty": "^9.1.1",
    "prom-client": "^14.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.5.0",
    "@nestjs/cli": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.2.2",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^16.0.0",
    "@types/node-rsa": "^1.1.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.22.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.3",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.8",
    "ts-node": "^10.0.0",
    "typescript": "^4.8.4",
    "widdershins": "^4.0.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
